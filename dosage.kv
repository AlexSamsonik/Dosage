<ItemLabel@Label>:
    front_size: "45sp"
    halign: "left"
    valign: "middle"
    text_size: self.size


<Container>:
    rows: 4

    text_input: text_input
    paracetamol_240: paracetamol_240
    paracetamol_120: paracetamol_120
    ibuprofen_200: ibuprofen_200
    ibuprofen_100: ibuprofen_100

    AnchorLayout:
        size_hint: 1, 0.15
        TextInput:
            id: text_input
            font_size: "45sp"
            multiline: False
            input_type: "number"
            input_filter: "int"

    GridLayout:
        cols: 4

        BoxLayout:
            orientation: "vertical"
            padding: [30, 0, 0, 0]

            ItemLabel:
                text: "Paracetamol 240mg/5ml"

            ItemLabel:
                text: "Paracetamol 120mg/5ml"

            ItemLabel:
                text: "Ipubrofen 200mg/5ml"

            ItemLabel:
                text: "Ipubrofen 100mg/5ml"

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.5, 1

            ItemLabel:
                id: paracetamol_240
                text: "0"

            ItemLabel:
                id: paracetamol_120
                text: "0"

            ItemLabel:
                id: ibuprofen_200
                text: "0"

            ItemLabel:
                id: ibuprofen_100
                text: "0"

    BoxLayout:
        size_hint: 0.9, 0.15
        padding: [30, 0, 30, 20]
        Button:
            text: "Calculate"
            on_release:
                root.calculate()